                <button class="btn btn-primary">Enregistrer</button>
            {% endif %}
            <a href="{{ path('app_playlist_index') }}" class="btn btn-secondary">Retour Ã  la liste</a>
        {{ form_end(form) }}
    </div>
{% endblock %} 